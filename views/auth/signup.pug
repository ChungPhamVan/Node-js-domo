extends ../layout/common.pug

block linkCommon
	.container
		.row.col-12.d-flex.justify-content-center
			form.mt-5(active="/auth/signup", method="POST", class="form-group w-50", enctype="multipart/form-data")
				if errors
					each error in errors
						.alert.alert-danger= error
				form-group
					label(for="Name")
						h3 Name
					input(type="text", name="name", id="Name", class="form-control w-100 mr-5", placeholder="Enter your name ...", value=values ? values.name : "")

				form-group
					label.mt-3(for="Phone")
						h3 Phone
					input(type="text", name="phone", id="Phone", class="form-control w-100 mr-5", placeholder="Enter your phone ...", value=values ? values.phone : "")

				form-group
					label.mt-3(for="Email")
						h3 Email
					input(type="email", name="email", id="Email", class="form-control w-100 mr-5", placeholder="Enter your email ...", value=values ? values.email : "")

				form-group
					label.mt-3(for="Password")
						h3 Password
					input(type="password", name="password", id="Password", class="form-control w-100 mr-5", placeholder="Password ...")

				form-group
					label.mt-3(for="avatar")
						h3 Avatar-image
					input#avatar-image.form-control-file(type="file", name="avatar", value=values ? values.avatar : "")

				.d-flex.justify-content-center.mt-5
					button(class="btn btn-primary w-50")
